<%= form_for @job do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :containers, "# of Containers Required" %>
	<%= f.text_field :containers %>

	<%= f.label :origin %>
	<%= f.text_field :origin %>

	<%= f.label :cargo %>
	<%= f.text_area :cargo %>

	<%= f.label :destination %>
	<%= f.text_field :destination %>

	<%= f.label :cost %>
	<%= f.text_field :cost %>

  <%= f.submit :update %>
<% end %>