<div class="boat-create">	
	<%= form_for Boat.new, remote: true do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :containers %>
		<%= f.text_field :containers %>
		<%= f.label :location %>
		<%= f.text_field :location %>
		<%= f.file_field :avatar %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.submit "Add boat" %>
	<%end%>
</div>

<% @boats.each do |boat| %>
	<div class="boat-list">
	<%= link_to boat.name,  boat_path(boat) %>
	<br> 
	</div>
<% end %>